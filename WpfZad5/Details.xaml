<Window x:Class="WpfZad5.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfZad5"
        mc:Ignorable="d"
        Title="Details" SizeToContent="Height" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Label>Tytuł:</Label>
            <TextBlock x:Name="TitleDisplay"></TextBlock>
        </DockPanel>

        <DockPanel Grid.Row="1">
            <Label>Opis:</Label>
            <TextBlock x:Name="DescriptionDisplay"></TextBlock>
        </DockPanel>

        <DockPanel Grid.Row="2">
            <Label>Data rozpoczęcia:</Label>
            <TextBlock x:Name="DateDisplay" ></TextBlock>

        </DockPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3">
            <Button x:Name="CancelButton" Margin="3" Padding="10, 3" Click="CancelButton_Click">Zamknij</Button>

        </StackPanel>
    </Grid>
</Window>
